<div id="<%= dom_id child %>">

  <p>
    <strong>Name:</strong>
    <%= child.name %>
  </p>

  <p>
    <strong>Birthday:</strong>
    <%= child.birthday.strftime("%B %d, %Y") %>
  </p>
    <p>
    <strong>Age:</strong>
    <%= child.age %>
  </p>

  <p>
    <strong>Gender:</strong>
    <%= child.gender %>
  </p>

</div>
