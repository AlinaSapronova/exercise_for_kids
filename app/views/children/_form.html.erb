<%= form_with(model: child) do |form| %>
  <% if child.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(child.errors.count, "error") %> prohibited this child from being saved:</h2>

      <ul>
        <% child.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
<div class="form-container">
  <%= form.hidden_field :user_id, value: current_user.id %>

  <div class="form-group">
    <%= form.label :birthday, class: "form-label" %>
    <%= form.date_field :birthday, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :gender, class: "form-label" %>
    <%= form.text_field :gender, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.submit class: "btn-submit" %>
  </div>
</div>

<% end %>
