<body class="registration">



<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'new_user col-6 mx-auto', novalidate: true }) do |f| %>
  <%= f.error_notification %>
<h2 class="mb-4">Sign up</h2>
  <div class="form-group">
    <%= f.input :name,
                # required: true,
                autofocus: true,
                input_html: { class: "form-control", autocomplete: "name" },
                wrapper: false,
                label_html: { class: "form-label" },
                error_html: { class: "invalid-feedback" },
                valid_html: { class: "valid-feedback" } %>
  </div>

  <div class="form-group">
    <%= f.input :email,
                # required: true,
                autofocus: true,
                input_html: { class: "form-control", autocomplete: "email" },
                wrapper: false,
                label_html: { class: "form-label" },
                error_html: { class: "invalid-feedback" },
                valid_html: { class: "valid-feedback" } %>
  </div>

  <div class="form-group">
    <%= f.input :password,
                # required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { class: "form-control", autocomplete: "new-password" },
                wrapper: false,
                label_html: { class: "form-label" },
                error_html: { class: "invalid-feedback" },
                valid_html: { class: "valid-feedback" } %>
  </div>

  <div class="form-group">
    <%= f.input :password_confirmation,
                # required: true,
                input_html: { class: "form-control", autocomplete: "new-password" },
                wrapper: false,
                label_html: { class: "form-label" },
                error_html: { class: "invalid-feedback" },
                valid_html: { class: "valid-feedback" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up", class: "btn btn-primary btn-block mt-4" %>
  </div>
  <div class="form-actions">
  <%= render "devise/shared/links" %>
  <div>
<% end %>



</body>
