<body class="registration">
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title">Log in</h2>

          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form' }) do |f| %>
            <div class="form-group">
             
              <%= f.input :email, required: false, autofocus: true, input_html: { class: 'form-control', autocomplete: 'email' } %>
            </div>

            <div class="form-group">
              
              <%= f.input :password, required: false, input_html: { class: 'form-control', autocomplete: 'current-password' } %>
            </div>

            <div class="form-group form-check">
              <%= f.input :remember_me, as: :boolean, label: false, input_html: { class: 'form-check-input' } %>
              <%= f.label :remember_me, class: 'form-check-label' %>
            </div>

            <div class="form-group">
              <%= f.button :submit, "Log in", class: 'btn btn-primary btn-block' %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
</body>
